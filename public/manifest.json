{
    "name": "Notion Capture - Chrome Extension",
    "description": "Capture Anything, Instantly",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "/icons/get_started16.png",
        "32": "/icons/get_started32.png",
        "48": "/icons/get_started48.png",
        "128": "/icons/get_started128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/pages/content/index.js"
            ],
            "run_at": "document_start"
        }
    ],
        "background": {
            "service_worker": "src/pages/background/index.js",
            "type": "module"
        },
        "options_page": "src/pages/options/index.html",
        "action": {
            "default_icon": {
                "16": "/icons/get_started16.png",
                "32": "/icons/get_started32.png",
                "48": "/icons/get_started48.png",
                "128": "/icons/get_started128.png"
            }
        },
        "permissions": [
            "storage",
            "tabs",
            "scripting"
        ],
        "web_accessible_resources": [
            {
                "resources": [
                    "src/pages/popup/index.html",
                    "src/pages/content/index.js",
                    "src/pages/popup/index.js"
                ],
                "matches": [
                    "<all_urls>"
                ]
            }
        ],
        "host_permissions": [
            "*://*/*"
        ]
    }